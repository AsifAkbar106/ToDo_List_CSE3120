<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardBackgroundColor="@color/cardview_dark_background"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/note_add"
    tools:context=".KeepNote.NoteMainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Color options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center">

                <!-- Color Options -->

                    <!-- Color Option 1 -->
                    <Button
                        android:id="@+id/color_option1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="#ADD8E6"
                        android:foreground="#ADD8E6"
                        android:layout_margin="8dp"
                        android:onClick="selectColor" />

                    <!-- Color Option 2 -->
                    <Button
                        android:id="@+id/color_option2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="#90EE90"
                        android:foreground="#90EE90"
                        android:layout_margin="8dp"
                        android:onClick="selectColor" />

                    <!-- Color Option 3 -->
                    <Button
                        android:id="@+id/color_option3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="#FFF8C3D5"
                        android:foreground="#F8C3D5"
                        android:layout_margin="8dp"
                        android:onClick="selectColor" />

            </LinearLayout>

            <!-- Your content here -->
            <EditText
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="Title"
                android:layout_margin="5dp"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:layout_margin="5dp"
                android:hint="Description"
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:background="@color/purple"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:onClick="AddNotes"
                android:id="@+id/addnotes"
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
